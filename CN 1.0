2. TCP Fibonacci Server (tcp_fib_server.py)
# tcp_fib_server.py
import socket

def fib(n):
    a, b = 0, 1
    for _ in range(n):
        a, b = b, a + b
    return a

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
s.bind(('127.0.0.1', 5001))
s.listen(1)
print("TCP Fibonacci Server on port 5001")

while True:
    conn, addr = s.accept()
    data = conn.recv(1024).decode().strip()
    if not data:
        continue
    n = int(data)
    result = str(fib(n))
    conn.sendall(result.encode())
    conn.close()




2. TCP Fibonacci Client (tcp_fib_client.py)
# tcp_fib_client.py
import socket

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect(('127.0.0.1', 5001))
n = int(input("Enter n for Fibonacci: "))
s.sendall(str(n).encode())
result = s.recv(1024).decode()
print(f"Fibonacci({n}) = {result}")
s.close()
3. UDP Echo Server (udp_echo_server.py)
# udp_echo_server.py
import socket

s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
s.bind(('127.0.0.1', 5002))
