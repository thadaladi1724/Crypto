5. XML-RPC Basic Server (xmlrpc_server.py)
# xmlrpc_server.py
from xmlrpc.server import SimpleXMLRPCServer

def echo(msg):
    return f"Echo: {msg}"

server = SimpleXMLRPCServer(('127.0.0.1', 5004))
server.register_function(echo)
print("XML-RPC Basic Server on port 5004")
server.serve_forever()
